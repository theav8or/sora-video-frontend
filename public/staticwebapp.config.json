{
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"],
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "HEAD", "OPTIONS"],
      "rewrite": "https://sora-wafl.azurewebsites.net/api/"
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "responseOverrides": {
    "400": {
      "rewrite": "/error.html"
    },
    "401": {
      "statusCode": 302,
      "redirect": "/login"
    },
    "403": {
      "statusCode": 302,
      "redirect": "/forbidden"
    },
    "404": {
      "rewrite": "/404.html"
    }
  }
}
